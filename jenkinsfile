pipeline {
    agent any
    tools {
            maven 'Maven_3.5.2'
        }
    stages {
        stage('Source') { // Get code
          steps {
            // get code from our Git repository
            git 'https://github.com/girish513/ActuatorExample'
          }
        }
        stage ('Compile Stage') {

            steps {
                    sh 'mvn clean compile'
            }
        }

        stage ('Testing Stage') {
            steps {
                    sh 'mvn test'
            }
        }


        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'maven_3_5_0') {
                    sh 'mvn deploy'
                }
            }
        }
    }
}